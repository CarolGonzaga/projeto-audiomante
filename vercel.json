{
    "version": 2,
    "builds": [
        {
            "src": "api/src/index.ts",
            "use": "@vercel/node",
            "config": {
                "includeFiles": ["../prisma/**"]
            }
        },
        {
            "src": "client/package.json",
            "use": "@vercel/next"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/src/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/client"
        }
    ]
}
